# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files
[*.php]
indent_style = tab
indent_size = 1

# JavaScript files
[*.js]
indent_style = tab
indent_size = 1

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false

# SCSS/CSS files
[*.{css,scss,sass}]
indent_style = tab
indent_size = 1

# HTML files
[*.html]
indent_style = tab
indent_size = 1

