{
  "name": "wpsets",
  "description": "A scaffold for creating theme with the site editor in mind.",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/philhoyt/wp-site-editor-theme-scaffold.git"
  },
  "scripts": {
    "start": "wp-scripts start",
    "build": "wp-scripts build",
    "format": "wp-scripts format",
    "format:prettier": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "lint:js": "wp-scripts lint-js",
    "lint:css": "wp-scripts lint-style",
    "lint:scss": "stylelint 'src/**/*.scss' --formatter verbose",
    "lint:scss:fix": "stylelint 'src/**/*.scss' --fix",
    "lint:php": "composer run-script lint",
    "lint:php:fix": "composer run-script lint-fix",
    "packages-update": "wp-scripts packages-update"
  },
  "devDependencies": {
    "@stylistic/stylelint-plugin": "^3.0.0",
    "@wordpress/scripts": "^31.0.0",
    "editorconfig": "^3.0.1",
    "prettier": "^3.0.0",
    "sass": "^1.86.3",
    "stylelint": "^16.0.0",
    "stylelint-config-standard-scss": "^13.0.0"
  }
}
